# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing basic website route navigation
GET   /               controllers.HomeController.index
GET	  /booking		 controllers.BookingController.booking()
GET	  /bookingtrainer		 controllers.BookingController.bookingtrainerstep(horseid: String)
GET	  /bookingselecttime	 controllers.BookingController.bookingSelectime(horseid: String, trainerid: String)
GET	  /bookingconfirm			controllers.BookingController.bookingConfirm(FName: String, LName: String, Email: String, DayToBook:String,TimeToSelect: String,SubButton: String, horseid : String, trainerid: String)

GET   /forlease			controllers.HomeController.leasing()
GET	  /edit				controllers.HomeController.adminEdit()
GET   /register       	controllers.ClientController.register()
POST  /register      	controllers.ClientController.processPage()
GET   /processAdLogin 	controllers.HomeController.processAdminLogin(usr : String, pwd: String)
GET	  /deleteHorseRecord	  controllers.HomeController.deleteHorseRecord(horseid: String)
GET   /updateHorseRecord 	 controllers.HomeController.updateHorseRecord(horseid: String, horsename: String, horsesize: String, horselevel: String, horsecolor : String,horsegender : String, lessonactive : Option[String], horseImgUrl : String, leaseactive : Boolean, horseprice : Double, But : Option[String])

GET   /forlease		controllers.HomeController.leasing()
GET	  /edit			controllers.HomeController.adminEdit()
GET	  /viewbookings		controllers.HomeController.viewSchedule()
GET   /register       controllers.ClientController.register()
POST  /register      controllers.ClientController.processPage()

GET   /login       controllers.ClientController.login()
POST   /login       controllers.ClientController.loginTry()
GET    /logout      controllers.ClientController.logout()

GET   /:page          controllers.HomeController.loadPage(page)

# Map static resources from the /public folder to the /assets URL path
GET   /assets/*file   controllers.Assets.versioned(path="/public", file: Asset)
